<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.renee328.mapper.PostImageMapper">

    <!-- 이미지 URL 추가 -->
    <insert id="insertPostImage" parameterType="com.renee328.dto.PostImageDto">
        INSERT INTO post_images (post_id, image_url)
        VALUES (#{postId}, #{imageUrl})
    </insert>

    <!-- 게시글에 속한 이미지 조회 -->
    <select id="getImageUrlsByPostId" parameterType="Long" resultType="String">
        SELECT image_url
        FROM post_images
        WHERE post_id = #{postId}
    </select>

    <!-- 게시글의 모든 이미지 삭제 -->
    <delete id="deletePostImagesByPostId" parameterType="Long">
        DELETE FROM post_images
        WHERE post_id = #{postId}
    </delete>

</mapper>